{
  "id": "com.puschie.fritzbox-bridge",
  "version": "0.2.1",
  "compatibility": ">=2.0.5",
  "sdk": 2,
  "name": {
    "en": "Fritzbox Bridge",
    "de": "Fritzbox Bridge"
  },
  "tags": {
    "en": [
      "fritzbox", "bridge", "socket", "energymeter", "sensor", "dect", "thermostat", "avm", "smartfritz",
      "Fritz!", "Fritz!Box", "Fritz!DECT", "Fritz!Powerline", "CometDECT" ]

  "category": [
    "appliances"
  ],
  "homeyCommunityTopicId": 11334,
  "permissions": [ "homey:app:nl.nielsdeklerk.log" ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Christoph Potas",
    "email": "christoph286@googlemail.com"
  },
  "capabilities": {
    "measure_open_window": {
      "type": "boolean",
      "title": {
        "en": "Open window detected",
        "de": "Fenster-offen erkennung"
      },
      "uiQuickAction": false,
      "uiComponent": null,
      "getable": true,
      "setable": false
    },
    "measure_device_locked": {
      "type": "boolean",
      "title": {
        "en": "Device input locked",
        "de": "Ger채te Tastenspeere"
      },
      "getable": true,
      "setable": false
    },
    "measure_api_locked": {
      "type": "boolean",
      "title": {
        "en": "API input locked",
        "de": "API Tastenspeere"
      },
      "getable": true,
      "setable": false
    },
    "measure_device_error": {
      "type": "string",
      "title": {
        "en": "Device error",
        "de": "Ger채te Fehler"
      },
      "getable": true,
      "setable": false
    },
    "measure_battery_low": {
      "type": "boolean",
      "title": {
        "en": "Battery low warning",
        "de": "Batterie schwach Warnung"
      },
      "getable": true,
      "setable": false
    },
    "measure_switch_mode": {
      "type": "boolean",
      "title": {
        "en": "automatic timer",
        "de": "Automatische Zeitschaltung"
      }
    }
